{
  "name": "ifttt-webhook",
  "version": "1.0.0",
  "private": true,
  "description": "Simple IFTTT webhook with some useful features",
  "homepage": "https://github.com/Ithildir/ifttt-webhook#readme",
  "bugs": {
    "url": "https://github.com/Ithildir/ifttt-webhook/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ithildir/ifttt-webhook.git"
  },
  "license": "MIT",
  "author": "Andrea Di Giorgi",
  "scripts": {
    "lint": "eslint . && prettier --check . && sort-package-json --check",
    "lint-fix": "eslint --fix . && prettier --write . && sort-package-json",
    "test": "ava",
    "test-coverage": "nyc --reporter=lcov --reporter=text npm test",
    "validate-coverage": "nyc check-coverage"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "no-console": "off"
    }
  },
  "ava": {
    "require": [
      "dotenv/config"
    ]
  },
  "nyc": {
    "branches": 60,
    "functions": 70,
    "lines": 70,
    "statements": 70
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "superagent": "^5.2.2",
    "toggl-api": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "nock": "^12.0.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "sort-package-json": "^1.42.3"
  }
}
