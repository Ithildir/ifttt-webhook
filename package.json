{
  "name": "ifttt-webhook",
  "version": "1.0.0",
  "private": true,
  "description": "Simple IFTTT webhook with some useful features",
  "homepage": "https://github.com/Ithildir/ifttt-webhook#readme",
  "bugs": {
    "url": "https://github.com/Ithildir/ifttt-webhook/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ithildir/ifttt-webhook.git"
  },
  "license": "MIT",
  "author": "Andrea Di Giorgi",
  "scripts": {
    "lint": "eslint . && prettier --check . && sort-package-json --check",
    "lint-fix": "eslint --fix . && prettier --write . && sort-package-json",
    "test": "ava",
    "test-coverage": "nyc --reporter=lcov --reporter=text npm test",
    "validate-coverage": "nyc check-coverage"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "no-console": "off"
    }
  },
  "ava": {
    "require": [
      "dotenv/config"
    ]
  },
  "nyc": {
    "branches": 60,
    "functions": 70,
    "lines": 70,
    "statements": 70
  },
  "dependencies": {
    "anydo-api": "^0.2.0",
    "superagent": "^8.0.9"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.28.0",
    "nock": "^13.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "sinon": "^15.2.0",
    "sort-package-json": "^2.5.1"
  },
  "engines": {
    "node": ">=16"
  }
}
